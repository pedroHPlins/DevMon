<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/creature_list_dest">

    <fragment
        android:id="@+id/creature_list_dest"
        android:name="com.example.devmon.view.creatures.CreatureListFragment"
        android:label="creatures_list_fragment"
        tools:layout="@layout/creatures_list_fragment" >
        <action
            android:id="@+id/creature_choose_action"
            app:destination="@id/creature_choose_dest" />
    </fragment>

    <fragment
        android:id="@+id/creature_choose_dest"
        android:name="com.example.devmon.view.creatures.CreatureChooseFragment"
        android:label="creatures_choose_fragment"
        tools:layout="@layout/creature_choose_fragment">
        <action
            android:id="@+id/creature_choose_to_creature_added_action"
            app:destination="@id/creature_added_dest" />
    </fragment>

    <fragment
        android:id="@+id/creature_added_dest"
        android:name="com.example.devmon.view.creatures.CreatureAddedFragment"
        android:label="creatures_added_fragment"
        tools:layout="@layout/creature_added_fragment">
        <argument
            android:name="creatureNumber"
            app:argType="integer" />
    </fragment>"

</navigation>